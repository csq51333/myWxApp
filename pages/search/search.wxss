.sousuokuang {
  width: 100%;
  height: 120px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sousuo {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-items: center;
  background-color: #edca7f;
}
.shurukuang {
  width: 80%;
  height: 64rpx;
  margin-left: 8px;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f6f6f6;
}
.shurukuang input {
  width: 90%;
  height: 100%;
  font-size: 32rpx;
}
.sousuo_anniu {
  width: 20%;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sousuo_anniu text {
  margin-right: 4px;
  font-size: 30rpx;
}

.title{
  /* margin-top: 10px; 
  margin-bottom: 10px;*/
  width: 100%;
  height: 40px;
  text-align: center;
  line-height: 50px;
  background-color: #edca7f;
  font-size: 20px;
}


.item{
  margin-top: 20rpx;
  margin-left: 30rpx;
  height: 120rpx; 
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.blockClass{
  margin-top: 100rpx;
  margin: 0;
  padding: 0;
  position: relative; 
  vertical-align: center; 
  height: 500px;
  overflow-y: auto;
}

.linkClass {
  margin-left:10rpx;
  margin-right:10rpx;
  font-size: 32rpx;
  background-color: #edca7f;
  border-radius: 4rpx;
  height: 40px;
  text-align: center;
  line-height:40px
}

.downText{
  word-wrap: normal;
}
.downloadClass {
  margin-left:10rpx;
  margin-right:10rpx;
  padding: 8px;
  font-size: 32rpx;
  overflow: hidden;
  background-color: rgb(107 176 191);
  white-space: pre-wrap;
  opacity: 0.6;
  /* align-items: center; */
  /* justify-content: center; */
}

.weather-bg{
  position: fixed;
  top: 20px;
  left:0;
  width: 100%;
  height: 100%;
  z-index:-1;
  opacity:0.4
}

.illustrate{
  text-align: left;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 5%;
  opacity:0.25;
  line-height:30px;
}

.textClass{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}

.marginT40 {
  margin-top: 40rpx;
}